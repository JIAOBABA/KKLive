<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/direct_seeding_history_record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/direct_seeding_mipmap_history_record"
            android:layout_height="match_parent"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/direct_seeding_tab_layout"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/direct_seeding_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/direct_seeding_mipmap_search"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/direct_seeding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>