<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"/>

    <RadioGroup
        android:id="@+id/main_radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <RadioButton
            android:id="@+id/main_direct_seeding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/main_text_color"
            android:gravity="center"
            android:drawableTop="@drawable/main_mipmap_direct_seeding"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="直播"/>

        <RadioButton
            android:id="@+id/main_dynamic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/main_text_color"
            android:gravity="center"
            android:drawableTop="@drawable/main_mipmap_dynamic"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp"
            android:text="动态"/>

        <RadioButton
            android:id="@+id/main_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/main_text_color"
            android:gravity="center"
            android:drawableTop="@drawable/main_mipmap_news"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:text="消息"/>

        <RadioButton
            android:id="@+id/main_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/main_text_color"
            android:gravity="center"
            android:drawableTop="@drawable/main_mipmap_mine"
            android:layout_height="match_parent"
            android:text="我的"/>

    </RadioGroup>

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/main_mipmap_image"/>

</FrameLayout>
