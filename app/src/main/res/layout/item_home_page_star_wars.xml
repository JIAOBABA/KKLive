<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_left_image"
                    android:layout_marginTop="30dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:layout_marginTop="80dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/left_star_name_bg"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_left_nick"
                    android:layout_marginTop="85dp"
                    android:layout_width="60dp"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_left_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_middle_image"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:layout_marginTop="80dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/middle_star_name_bg"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_middle_nick"
                    android:layout_marginTop="85dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="70dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_middle_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_middle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_right_image"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginTop="80dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_star_name_bg"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_right_nick"
                    android:layout_marginTop="85dp"
                    android:layout_width="60dp"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_home_page_star_wars_right_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/item_home_page_star_wars_right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/kk_weekstar_rankicon"/>

        <TextView
            android:id="@+id/item_home_page_star_wars_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="更多排行榜"
            android:layout_margin="2dp"
            android:textColor="#ff5900"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@mipmap/kk_weekstar_more_rankicon"/>

    </LinearLayout>

</LinearLayout>